<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackground"

    >

    <TextView
        android:id="@+id/questionIndexTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/archivo_black"
        android:text="Pytanie 1"
        android:textColor="@color/primaryFontColor"
        android:textSize="24sp"
        android:background="@drawable/border_purple"
        android:paddingHorizontal="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Przykladownie pytanie tak o super no mega epic"
        android:fontFamily="@font/archivo_black"
        android:textSize="18sp"
        android:textColor="@color/secondaryFontColor"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/questionIndexTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/answersLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="70dp"
        >

        <Button
            android:id="@+id/answer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odpowiedź 1"
            android:background="@drawable/border"
            app:backgroundTint="@null"
            android:paddingHorizontal="70dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="18sp"
            android:textColor="@color/secondaryFontColor"
            android:fontFamily="@font/archivo_black"
            />

        <Button
            android:id="@+id/answer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odpowiedź 2"
            android:background="@drawable/border"
            app:backgroundTint="@null"
            android:paddingHorizontal="70dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="18sp"
            android:textColor="@color/secondaryFontColor"
            android:fontFamily="@font/archivo_black"
            />

        <Button
            android:id="@+id/answer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odpowiedź 3"
            android:background="@drawable/border_green"
            app:backgroundTint="@null"
            android:paddingHorizontal="70dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="18sp"
            android:textColor="@color/secondaryFontColor"
            android:fontFamily="@font/archivo_black"
            />`

        <Button
            android:id="@+id/answer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odpowiedź 4"
            android:background="@drawable/border"
            app:backgroundTint="@null"
            android:paddingHorizontal="70dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="18sp"
            android:textColor="@color/secondaryFontColor"
            android:fontFamily="@font/archivo_black"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
