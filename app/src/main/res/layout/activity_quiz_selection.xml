<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".QuizSelection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackground"

    >

    <TextView
        android:id="@+id/questionIndexTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/archivo_black"
        android:text="Wybierz Quiz"
        android:textColor="@color/primaryFontColor"
        android:textSize="24sp"
        android:background="@drawable/border_purple"
        android:paddingHorizontal="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/questionIndexTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:id="@+id/quizzesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/quiz1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Quiz 1"
                android:background="@drawable/border"
                app:backgroundTint="@null"
                android:paddingHorizontal="70dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="18sp"
                android:textColor="@color/secondaryFontColor"
                android:fontFamily="@font/archivo_black"
                />
            <Button
                android:id="@+id/quiz2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Quiz 2"
                android:background="@drawable/border"
                app:backgroundTint="@null"
                android:paddingHorizontal="70dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="18sp"
                android:textColor="@color/secondaryFontColor"
                android:fontFamily="@font/archivo_black"
                />
            <Button
                android:id="@+id/quiz3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Quiz 3"
                android:background="@drawable/border"
                app:backgroundTint="@null"
                android:paddingHorizontal="70dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="18sp"
                android:textColor="@color/secondaryFontColor"
                android:fontFamily="@font/archivo_black"
                />
            <Button
                android:id="@+id/quiz4"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Quiz 4"
                android:background="@drawable/border"
                app:backgroundTint="@null"
                android:paddingHorizontal="70dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="18sp"
                android:textColor="@color/secondaryFontColor"
                android:fontFamily="@font/archivo_black"
                />




        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
